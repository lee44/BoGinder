<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.jlee.boginder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.ChatActivity" />
        <activity
            android:name=".Activities.LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.RegistrationActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activities.LoginRegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.ProfileSliderActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.ProfilePreviewActivity"
            android:windowSoftInputMode="adjustPan" />

        <service android:name=".Firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Service.FetchIntentService"
            android:exported="false" />
    </application>

</manifest>